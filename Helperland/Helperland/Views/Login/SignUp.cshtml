@model Helperland.Models.viewModels.UserRegVM

@{
    ViewData["Title"] = "Create an Account";
    Layout = "~/Views/Shared/_SecondLayout.cshtml";
}

<!-- SignUp Form Section Start -->
<section class="signupForm">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="content-title">Create an Account</h2>
            </div>
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                <hr class="sign-hr">
                <img src="/img/faq-separator.png" class="faq-separator mx-2" alt="">
                <hr class="sign-hr">
            </div>
        </div>
        <div class="signForm">
            <form class="row g-3 mx-auto" id="signupPage" method="post" asp-controller="Login" asp-action="SignUp">
                <div class="col-md-6">
                    <input asp-for="Firstname" class="form-control form-txt" id="inputFname" placeholder="First name">
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input asp-for="Lastname" class="form-control form-txt" id="inputLname" placeholder="Last name">
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input asp-for="Email" class="form-control form-txt" id="inputEmail" placeholder="E-mail address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">+46</span>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number">
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input asp-for="Password" class="form-control" id="inputPassword"
                        placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input asp-for="Confirmpwd" class="form-control" id="inputCPassword"
                        placeholder="Confirm Password">
                    <span asp-validation-for="Confirmpwd" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <div class="form-check mx-auto">
                        <input class="form-check-input" type="checkbox" id="gridCheck" required>
                        <label class="form-check-label" for="gridCheck">
                            I have read the <a href="#" class="privacyLink">privacy policy</a>
                        </label>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn-register">Register</button>
                </div>
                <div class="col-md-12 text-center">
                    <span class="loginSpan">Already registered? <a href="#" class="privacyLink">Login Now</a></span>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- SignUp Form Section End -->

@section css{
    <link rel="stylesheet" href="/css/signUp.css">
}
@section script{
    <script src="/js/signup.js"></script>
}