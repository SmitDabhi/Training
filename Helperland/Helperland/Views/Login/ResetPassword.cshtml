@model Helperland.Models.viewModels.ResetPswVM

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_SecondLayout.cshtml";
}
<section class="resetBlock">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center ">
                    <h2 class="content-title">Reset Password</h2>
                </div>
            </div>
        </div>
        <div class="row my-3">
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                <hr class="price-hr">
                <img src="/img/faq-separator.png" class="faq-separator mx-2" alt="">
                <hr class="price-hr">
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <form asp-action="ResetPassword" asp-controller="Login" method="post">
              <div class="my-3">
                <label for="inputNewPass" class="form-label">New Password</label>
                <input type="password" asp-for="Password" class="form-control" id="inputNewPass" placeholder="New Password">
                <span class="text-danger" id="errorNewPass"></span>
              </div>
              <div class="my-3">
                <label for="inputCPass" class="form-label">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" id="inputCPass">
                <span class="text-danger" id="errorCPass"></span>
              </div>
              <button type="submit" id="btnPswUpdate" class="btn mb-3" >Save</button>
            </form>
        </div>
    </div>
</section>


@section css{
    <link rel="stylesheet" href="/css/ResetPsw.css">
}
@section script{
    <script src="/js/resetPsw.js"></script>
}