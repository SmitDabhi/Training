                <img src="/img/faq-separator.png" class="faq-separator mx-2" alt="">
                <hr class="price-hr">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card price-card mx-auto my-5">
                    <div class="card-header">
                        <p>One Time</p>
                    </div>
                    <div class="price-details text-center">
                        <p class="price-icon mt-2 ">
                            <span class="euro">&euro;20</span><span class="per-hour">/hr</span>
                        </p>
                        <div class="d-flex align-items-center justify-content-center mb-4">
                            <div class="price-spec">
                                <p class="price-txt mb-4 d-flex align-items-center">
                                    <img src="/img/price-spec.png" class="me-2" alt="">Lower prices
                                </p>
                                <p class="price-txt mb-4 d-flex align-items-center">
                                    <img src="/img/price-spec.png" class="me-2" alt="">Easy online & secure payment
                                </p>
                                <p class="price-txt mb-4 d-flex align-items-center">
                                    <img src="/img/price-spec.png" class="me-2" alt="">Easy amendment
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="mb-2 mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center ">
                    <h2 class="content-title">Extra Services</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center align-items-center">
                <hr class="price-hr">
                <img src="/img/faq-separator.png" class="faq-separator mx-2" alt="">
                <hr class="price-hr">
            </div>
        </div>
        <div class="extra-service d-flex flex-wrap justify-content-center align-items-center">
            <div class="extra-items text-center">
                <div class="extra-img d-flex justify-content-center align-items-center mx-auto">
                    <img src="/img/1_cabinet.png" alt="">
                </div>
                <div class="extra-details mt-3">
                    <p class="extra-title mb-0">
                        Inside cabinets
                    </p>
                    <p class="extra-time text-center mt-1">
                        30 minutes
                    </p>
                </div>
            </div>
            <div class="extra-items text-center">
                <div class="extra-img d-flex justify-content-center align-items-center mx-auto">
                    <img src="/img/2_fridge.png" alt="">
                </div>
                <div class="extra-details mt-3">
                    <p class="extra-title mb-0">
                        Inside fridge
                    </p>
                    <p class="extra-time text-center mt-1">
                        30 minutes
                    </p>
                </div>
            </div>
            <div class="extra-items text-center">
                <div class="extra-img d-flex justify-content-center align-items-center mx-auto">
                    <img src="/img/3_oven.png" alt="">
                </div>
                <div class="extra-details mt-3">
                    <p class="extra-title mb-0">
                        Inside oven
                    </p>
                    <p class="extra-time text-center mt-1">
                        30 minutes
                    </p>
                </div>
            </div>
            <div class="extra-items text-center">
                <div class="extra-img d-flex justify-content-center align-items-center mx-auto">
                    <img src="/img/4_wash.png" alt="">
                </div>
                <div class="extra-details mt-3">
                    <p class="extra-title mb-0">
                        Laundry wash & dry
                    </p>
                    <p class="extra-time text-center mt-1">
                        30 minutes
                    </p>
                </div>
            </div>
            <div class="extra-items text-center">
                <div class="extra-img d-flex justify-content-center align-items-center mx-auto">
                    <img src="/img/5_window.png" alt="">
                </div>
                <div class="extra-details mt-3">
                    <p class="extra-title mb-0">
                        Interior windows
                    </p>
                    <p class="extra-time text-center mt-1">
                        30 minutes
                    </p>
                </div>
            </div>
        </div>
    </div>
